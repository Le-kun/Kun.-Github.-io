            text-align: center;
            color: #2c3e50;
        }
        section {
            margin: 20px 0;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        p, li {
            font-size: 16px;
            line-height: 1.6;
        }
        .dialogue {
            margin-left: 20px;
            font-style: italic;
        }
